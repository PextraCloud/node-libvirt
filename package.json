{
  "name": "@pextra/node-libvirt",
  "version": "0.0.0",
  "description": "A NodeJS library providing bindings (using NAPI) for libvirt written in TypeScript.",
  "main": "dist/index.js",
  "exports": {
    "node": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "directories": {
    "lib": "lib",
    "src": "src"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/bindings": "^1.5.5",
    "@types/bytes": "^3.1.4",
    "@types/node": "20.8.2",
    "@types/xml2js": "^0.4.14",
    "gts": "^5.2.0",
    "husky": "^8.0.3",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.202",
    "bindings": "^1.5.0",
    "bytes": "^3.1.2",
    "lodash": "^4.17.21",
    "node-addon-api": "^7.1.0",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "postinstall": "husky install",
    "lint": "gts lint",
    "fix": "gts fix",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "clean": "gts clean",
    "posttest": "npm run lint",
    "test:run": "npm run test:all:run",
    "test:unit:run": "MOCHA_TEST_FOLDER=unit npm run test:_run",
    "test:integration:run": "MOCHA_TEST_FOLDER=integration npm run test:_run",
    "test:functional:run": "MOCHA_TEST_FOLDER=functional npm run test:functional",
    "test:all:run": "MOCHA_TEST_FOLDER='**' npm run test:functional",
    "test": "npm run test:run",
    "test:unit": "npm run test:unit:run",
    "test:integration": "npm run test:integration:run",
    "test:functional": "npm run test:_run",
    "test:_run": "mocha --require ts-node/register test/$MOCHA_TEST_FOLDER/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PextraCloud/node-libvirt.git"
  },
  "keywords": [],
  "author": "Pextra Inc.",
  "license": "MIT"
}
